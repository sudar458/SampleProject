@model UserRegister // Replace with your actual namespace and model

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    // Protect against CSRF

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", style = "width: 300px;" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.password , "Password")
        @Html.PasswordFor(m => m.password, new { @class = "form-control", style = "width: 300px;" })
        @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
}

<div>
    <br />
    <a href="@Url.Action("Login", "User")">Already have an account? Login here</a>
</div>

