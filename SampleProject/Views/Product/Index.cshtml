@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Products</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>

            <th>Available Quantity</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>

                <td>@product.Name</td>
                <td>@product.AvailableQuantity</td>

                <td>

                  
                    <a class="btn btn-primary" asp-controller="Product" asp-action="ViewProduct" asp-route-productId="@product.Id
        ">View</a>

                    <a class="btn btn-primary" asp-controller="Product" asp-action="Delete" asp-route-productId="@product.Id
            ">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <a class="btn btn-primary" asp-controller="Product" asp-action="Create" >
       Create</a>
</table>